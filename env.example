# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Site Configuration
VITE_SITE_URL=https://your-domain.com
VITE_CONTACT_EMAIL=your.email@example.com

# Analytics (Optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CONTACT_FORM=true

# Security (Optional - for future enhancements)
# VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# VITE_TURNSTILE_SITE_KEY=your_cloudflare_turnstile_key

# Development
NODE_ENV=development

# NOTE: All VITE_ prefixed variables are exposed to the client
# Do NOT store sensitive secrets like API keys here unless they're meant to be public
